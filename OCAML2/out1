digraph finite_state_machine {
rankdir=Cacao;
size="8,5"
node [shape = circle];
4 -> 5 [ label = "1" ];
4 -> 2 [ label = "5" ];
5 -> 3 [ label = "2" ];
5 -> 4 [ label = "5" ];
3 -> 2 [ label = "1" ];
3 -> 1 [ label = "4" ];
2 -> 3 [ label = "2" ];
2 -> 4 [ label = "1" ];
2 -> 0 [ label = "3" ];
1 -> 0 [ label = "4" ];
}